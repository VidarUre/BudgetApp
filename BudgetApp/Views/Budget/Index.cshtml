@model BudgetApp.ViewModels.BudgetViewModel;

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>MyBudget</title>
</head>
<body>

    <div class="container">
        <div class="row">
            <h1>Mitt budsjett</h1>
        </div>
        <div class="row">
            <div class="col-12">
                @if (Model.Total >= 0)
                {
                    <div class="alert alert-success">
                        Overskudd: @Model.Total
                    </div>
                }
                else
                {
                    <div class="alert alert-danger">
                        Underskudd: @Model.Total
                    </div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-12">

                <div class="card border-success mb-3">
                    <div class="card-header text-success"><h5>Inntekter</h5></div>
                    <div class="card-body text-success">
                        <ul class="list-group list-group-flush">
                            @foreach (var i in Model.Income)
                            {
                            <li class="list-group-item text-dark">
                                <div style="float: left">
                                    @i.Name
                                    </div>
                                    <div style="float: right">
                                        @i.Amount
                                    </div>
                            </li>
                            }
                        </ul>
                        <h5 class="card-title" style="margin-top: 2em">
                            <div style="float: left">
                                Totalt:
                            </div>
                            <div style="float: right">
                                @Model.IncomeTotal
                            </div>
                        </h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card border-danger mb-3">
                    <div class="card-header text-danger"><h5>Utgifter</h5></div>
                    <div class="card-body text-danger">
                        <ul class="list-group list-group-flush">
                            @foreach (var i in Model.Expenses)
                            {
                                <li class="list-group-item text-dark">
                                    @i.Name
                                    <div style="float: right">
                                        @i.Amount
                                    </div>
                                </li>
                            }
                        </ul>
                        <h5 class="card-title" style="margin-top: 2em">
                            <div style="float: left">
                                Totalt:
                            </div>
                            <div style="float: right">@Model.ExpenseTotal</div>
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>